<%- include('./layout/header.ejs')%>

<div class="container py-5">
    <h2 class="mb-4 text-center fw-bold" style="letter-spacing:1px;">مدیران گروه فعلی</h2>
    <div class="row justify-content-center mb-4" id="currentAdminsRow">
        <div class="col-12 text-center text-muted">در حال بارگذاری...</div>
    </div>
    <h2 class="mb-4 text-center fw-bold" style="letter-spacing:1px;">سوابق مدیران گروه</h2>
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center" id="groupAdminTable">
                    <thead class="table-dark">
                        <tr>
                            <th>نام مدیر</th>
                            <th>تاریخ مدیرگروه شدن</th>
                            <th>اتمام دوره مدیریت</th>
                        </tr>
                    </thead>
                    <tbody id="groupAdminTableBody">
                        <tr><td colspan="3" class="text-muted">در حال بارگذاری...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
async function loadGroupAdmins() {
    try {
        const res = await fetch('/api/group-admins');
        const data = await res.json();
        return data;
    } catch (e) {
        return { current: [], history: [] };
    }
}

function formatPersianDate(dateStr) {
    if (!dateStr) return '-';
    const date = new Date(dateStr);
    return date.toLocaleDateString('fa-IR', {
        year: 'numeric', month: 'long', day: 'numeric',
        hour: '2-digit', minute: '2-digit'
    });
}

async function renderGroupAdminTable() {
    const tbody = document.getElementById('groupAdminTableBody');
    tbody.innerHTML = '';
    const { current, history } = await loadGroupAdmins();
    // نمایش مدیران فعلی
    const currentAdminsRow = document.getElementById('currentAdminsRow');
    currentAdminsRow.innerHTML = '';
    if (current && current.length) {
        current.forEach(admin => {
            const card = document.createElement('div');
            card.className = 'col-md-3 mb-3';
            card.innerHTML = `
                <div class="card border-primary shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-primary">${admin.username}</h5>
                        <p class="card-text text-secondary mb-0">تاریخ شروع مدیریت:</p>
                        <p class="card-text">${formatPersianDate(admin.createdAt)}</p>
                    </div>
                </div>
            `;
            currentAdminsRow.appendChild(card);
        });
    } else {
        currentAdminsRow.innerHTML = '<div class="col-12 text-center text-danger">مدیر فعالی وجود ندارد.</div>';
    }
    // نمایش تاریخچه
    if (!history || !history.length) {
        tbody.innerHTML = '<tr><td colspan="3" class="text-danger">هیچ سابقه‌ای یافت نشد.</td></tr>';
        return;
    }
    history.slice().reverse().forEach(admin => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
            <td class="fw-semibold">${admin.username}</td>
            <td>${formatPersianDate(admin.createdAt)}</td>
            <td class="text-danger">${formatPersianDate(admin.deletedAt)}</td>
        `;
        tbody.appendChild(tr);
    });
}
document.addEventListener('DOMContentLoaded', renderGroupAdminTable);
</script>

